<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice - Purchase Confirmation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .invoice-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .invoice-header {
            border-bottom: 2px solid #dee2e6;
            margin-bottom: 30px;
            padding-bottom: 20px;
        }
        .invoice-details {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        .book-image {
            max-width: 150px;
            max-height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }
        .total-section {
            background-color: #e9ecef;
            padding: 15px;
            border-radius: 8px;
            font-weight: bold;
        }
        .success-message {
            background-color: #d1edff;
            border: 1px solid #0dcaf0;
            color: #055160;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        @media print {
            .no-print {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="container invoice-container">
        <!-- Success Message -->
        <div class="success-message text-center">
            <h4><i class="bi bi-check-circle-fill"></i> Purchase Successful!</h4>
            <p class="mb-0">Thank you for your purchase. Your book has been successfully ordered.</p>
        </div>

        <!-- Invoice Header -->
        <div class="invoice-header text-center">
            <h1 class="mb-3">INVOICE</h1>
            <div class="row">
                <div class="col-md-6">
                    <h4>Online Bookstore</h4>
                    <p class="mb-1">Jakarta, Indonesia</p>
                    <p class="mb-1">Phone: +62-21-1234567</p>
                    <p class="mb-0">Email: info@bookstore.com</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-1"><strong>Invoice Number:</strong> <%= invoiceNumber %></p>
                    <p class="mb-1"><strong>Date:</strong> <%= purchaseDate.toLocaleDateString('id-ID') %></p>
                    <p class="mb-0"><strong>Customer:</strong> <%= user.username %></p>
                </div>
            </div>
        </div>

        <!-- Book Details -->
        <div class="invoice-details">
            <h5 class="mb-3">Order Details</h5>
            <div class="row">
                <div class="col-md-3">
                    <% if (book.coverUrl) { %>
                        <img src="<%= book.coverUrl %>" alt="<%= book.title %>" class="book-image img-fluid">
                    <% } else { %>
                        <div class="book-image bg-light d-flex align-items-center justify-content-center">
                            <span class="text-muted">No Image</span>
                        </div>
                    <% } %>
                </div>
                <div class="col-md-9">
                    <h4><%= book.title %></h4>
                    <p class="text-muted mb-2">Category: <%= book.Category.name %></p>
                    <p class="mb-3"><%= book.description %></p>

                    <div class="row">
                        <div class="col-sm-6">
                            <p class="mb-1"><strong>Price:</strong> <%= formatRupiah(book.price) %></p>
                            <p class="mb-1"><strong>Quantity:</strong> 1</p>
                            <p class="mb-0"><strong>Remaining Stock:</strong> <%= book.stock %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Section -->
        <div class="total-section text-end">
            <h4>Total Amount: <%= formatRupiah(total) %></h4>
        </div>

        <!-- Action Buttons -->
        <div class="text-center mt-4 no-print">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form action="/books/generate-pdf" method="POST" class="d-inline me-3">
                        <input type="hidden" name="bookId" value="<%= book.id %>">
                        <input type="hidden" name="invoiceNumber" value="<%= invoiceNumber %>">
                        <button type="submit" class="btn btn-secondary btn-lg">
                            <i class="bi bi-download"></i> Download PDF
                        </button>
                    </form>

                    <button onclick="window.print()" class="btn btn-info btn-lg me-3">
                        <i class="bi bi-printer"></i> Print Invoice
                    </button>

                    <a href="/books" class="btn btn-primary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to Books
                    </a>
                </div>
            </div>

            <div class="mt-3">
                <small class="text-muted">
                    You can continue shopping or download this invoice for your records.
                </small>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-5 pt-4 border-top">
            <p class="text-muted mb-0">Thank you for choosing our bookstore!</p>
            <small class="text-muted">This is a computer-generated invoice.</small>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"></script>
</body>
</html>
