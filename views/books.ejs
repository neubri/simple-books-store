<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <style>
    .book-cover {
      width: 60px;
      height: 80px;
      object-fit: cover;
      border-radius: 4px;
    }
    .action-buttons .btn {
      padding: 0.25rem 0.5rem;
      font-size: 0.875rem;
    }
    .table-responsive {
      overflow-x: auto;
    }
    .add-book-btn {
      margin-bottom: 20px;
    }
    .btn-buy {
      background-color: #28a745;
      color: white;
    }
    .btn-buy:hover {
      background-color: #218838;
      color: white;
    }
    .search-container {
      margin-bottom: 20px;
    }
    .user-info {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .logout-btn {
      margin-left: 10px;
    }
    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      flex-wrap: wrap;
      gap: 15px;
    }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">ðŸ“š Online Bookstore</a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    Welcome, <%= user.username %> (<%= user.role %>)
                </span>
                <form action="/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Header with Search -->
        <div class="row mb-4">
            <div class="col-md-6">
                <h2>ðŸ“– Book Collection</h2>
            </div>
            <div class="col-md-6">
                <form method="GET" action="/books">
                    <div class="input-group">
                        <input type="text" class="form-control" name="search"
                               placeholder="Search books..." value="<%= searchQuery || '' %>">
                        <button class="btn btn-outline-secondary" type="submit">
                            Search
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Admin Controls -->
        <% if (user.role === 'admin') { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">Admin Controls</h5>
                        <a href="/books/add" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Add New Book
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Success/Error Messages -->
        <% if (deleted) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> Book "<%= deleted.split('-')[0] %>" from category "<%= deleted.split('-')[1] %>" has been deleted.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <!-- Books Grid -->
        <div class="row">
            <% if (books.length === 0) { %>
            <div class="col-12 text-center">
                <div class="alert alert-info">
                    <h4>No books found</h4>
                    <p>Try searching with different keywords or check back later.</p>
                </div>
            </div>
            <% } else { %>
                <% books.forEach(book => { %>
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card book-card h-100">
                        <% if (book.coverUrl) { %>
                        <img src="<%= book.coverUrl %>" class="card-img-top book-image" alt="<%= book.title %>">
                        <% } else { %>
                        <div class="card-img-top book-image bg-light d-flex align-items-center justify-content-center">
                            <span class="text-muted">No Image</span>
                        </div>
                        <% } %>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= book.title %></h5>
                            <p class="card-text text-muted small">
                                <strong>Category:</strong> <%= book.Category.name %>
                            </p>
                            <p class="card-text flex-grow-1">
                                <%= book.description.length > 100 ? book.description.substring(0, 100) + '...' : book.description %>
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="price-tag"><%= formatRupiah(book.price) %></span>
                                    <span class="stock-info <%= book.stock === 0 ? 'out-of-stock' : '' %>">
                                        Stock: <%= book.stock %>
                                    </span>
                                </div>

                                <div class="btn-group w-100" role="group">
                                    <!-- Buy Button - Available for all users -->
                                    <% if (book.stock > 0) { %>
                                    <form method="POST" action="/books/buy/<%= book.id %>" class="flex-fill">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-cart-plus"></i> Buy Now
                                        </button>
                                    </form>
                                    <% } else { %>
                                    <button class="btn btn-secondary w-100" disabled>
                                        <i class="bi bi-x-circle"></i> Out of Stock
                                    </button>
                                    <% } %>
                                </div>

                                <!-- Admin Controls -->
                                <% if (user.role === 'admin') { %>
                                <div class="btn-group w-100 mt-2" role="group">
                                    <a href="/books/edit/<%= book.id %>" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a href="/books/delete/<%= book.id %>" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Are you sure you want to delete this book?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } %>
        </div>

        <!-- Pagination could be added here if needed -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"></script>
</body>
</html>
